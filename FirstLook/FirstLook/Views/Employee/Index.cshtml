@model IEnumerable<FirstLook.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<p>
    @using (Ajax.BeginForm("Index", new AjaxOptions(){ InsertionMode = InsertionMode.Replace, UpdateTargetId = "target"}))
    {
        <input type="text" name="searchTerm" />
        <input type="submit" value="Search" />
    }
</p>
<div class="container-fluid" id="target">
    <div class="row-fluid">
        @foreach (var item in Model)
        {
            <div class="span3">
                @Html.ActionLink("Edit", "Edit", new { id=item.Id })

                <div><b>@Html.ActionLink(item.FirstName + " " + item.LastName, "Details", new { id=item.Id })</b></div>
                <div>@item.Company</div>
            </div>
        }

    </div>

</div>
